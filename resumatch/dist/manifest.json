{
  "name": "ResuMatch",
  "description": "A chrome extension that matches your resumes to LinkedIn profile",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
    },
    "background": {
      "service_worker": "./background.js"
    },
    "options_page": "./options.html",
    "permissions": [
      "tabs",
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
}
